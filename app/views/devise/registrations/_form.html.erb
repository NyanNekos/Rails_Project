<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <form>
  <div class="mb-3"><label class="form-label" for="email">Email</label><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control item" %></div>
  <div class="mb-3"><label class="form-label" for="email">Name</label><%= f.text_field :name,class: "form-control item" %></div>
  <div class="password"><% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div class="mb-3"><label class="form-label" for="password">Password</label><%= f.password_field :password, autocomplete: "new-password",class: "form-control item" %></div>
  </div>
  <div class="mb-3"><label class="form-label" for="password">Confirm Password</label><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control item" %></div>
  <%= f.submit "Sign up", class: "btn btn-primary" %>
</form>
<% end %>